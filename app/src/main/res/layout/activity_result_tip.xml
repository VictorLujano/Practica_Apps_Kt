<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/background_app"
    tools:context=".tipApp.ResultTipActivity">

    <TextView
        android:id="@+id/tvTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Total: $1800"
        android:textSize="32sp"
        android:textColor="@color/white"
        android:layout_marginTop="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="16dp"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            app:cardBackgroundColor="@color/background_component"
            app:cardCornerRadius="16dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total+propina 10%"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:textColor="@color/title_text" />

                <TextView
                    android:id="@+id/tvTotalpropina10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$1800"
                    android:layout_gravity="center"
                    android:textSize="32sp"
                    android:textColor="@color/white" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/background_component"
            app:cardCornerRadius="16dp"
            android:layout_marginStart="8dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total+propina 5%"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:textColor="@color/title_text" />

                <TextView
                    android:id="@+id/tvTotalpropina5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$1800"
                    android:layout_gravity="center"
                    android:textSize="32sp"
                    android:textColor="@color/white" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_margin="16dp"
        app:cardBackgroundColor="@color/background_component"
        app:cardCornerRadius="16dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total por persona propina 10%: "
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textColor="@color/title_text" />

            <TextView
                android:id="@+id/tvxpersona10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$1800"
                android:layout_gravity="center"
                android:textSize="32sp"
                android:textColor="@color/white" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_margin="16dp"
        app:cardBackgroundColor="@color/background_component"
        app:cardCornerRadius="16dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total por persona propina 5%: "
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textColor="@color/title_text" />

            <TextView
                android:id="@+id/tvxpersona5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$1800"
                android:layout_gravity="center"
                android:textSize="32sp"
                android:textColor="@color/white" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="16dp"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            app:cardBackgroundColor="@color/background_component"
            app:cardCornerRadius="16dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total propina 10%: "
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:textColor="@color/title_text" />

                <TextView
                    android:id="@+id/tvpropina10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$1800"
                    android:layout_gravity="center"
                    android:textSize="32sp"
                    android:textColor="@color/white" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/background_component"
            app:cardCornerRadius="16dp"
            android:layout_marginStart="8dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total propina 5%: "
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:textColor="@color/title_text" />

                <TextView
                    android:id="@+id/tvpropina5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$1800"
                    android:layout_gravity="center"
                    android:textSize="32sp"
                    android:textColor="@color/white" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    
    <Button
        android:id="@+id/btnRegresarTip"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Regresar"
        android:layout_margin="16dp"/>

</LinearLayout>